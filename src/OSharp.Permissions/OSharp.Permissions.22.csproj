<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../../build/public.netstandard20.props" />
  <Import Project="../../build/version22.props" />

  <PropertyGroup>
    <PackageId>OSharpNS.Permissions</PackageId>
    <Summary>OSharp(.NetStandard2.0)核心组件</Summary>
    <Description>OSharp(.NetStandard2.0)权限组件，包含用户认证与权限验证的基础实现</Description>
    <RootNamespace>OSharp</RootNamespace>
    <AssemblyName>OSharp.Permissions</AssemblyName>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\OSharp.Permissions.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard2.0\OSharp.Permissions.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Authentication\**" />
    <EmbeddedResource Remove="Authentication\**" />
    <None Remove="Authentication\**" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Identity\OnlineUserCache.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="[2.2.0, 3.0)" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.OAuth" Version="[2.2.0, 3.0)" />
    <PackageReference Include="Microsoft.AspNetCore.Authorization" Version="[2.2.0, 3.0)" />
    <PackageReference Include="Microsoft.AspNetCore.Identity" Version="[2.2.0, 3.0)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\OSharp.AspNetCore\OSharp.AspNetCore.22.csproj" />
  </ItemGroup>

</Project>
